<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextWhite" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
    </style>

    <style name="EditTextTransparentEmpty" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="TextAppearance">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TextAppearance.Headline1" parent="TextAppearance">
        <item name="android:textSize">@dimen/_24sdp</item>
    </style>

    <style name="TextAppearance.Headline2" parent="TextAppearance">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="TextAppearance.Display1" parent="TextAppearance">
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="TextAppearance.Display2" parent="TextAppearance">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="TextAppearance.Display3" parent="TextAppearance">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextAppearance.Display4" parent="TextAppearance">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="CircleTextView" parent="TextAppearance.Display4">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:background">@drawable/circle_number</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="SwipeOptionButton">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/_20sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SwipeOptionButton.Image">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
    </style>

</resources>